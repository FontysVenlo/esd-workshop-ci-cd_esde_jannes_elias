{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,

    "types": ["node", "vitest"]  // âœ… this fixes Vitest globals
  },
  "include": [
    "src",
    "tests",
    "vite.config.ts",
    "vitest.config.ts"
  ]
}

